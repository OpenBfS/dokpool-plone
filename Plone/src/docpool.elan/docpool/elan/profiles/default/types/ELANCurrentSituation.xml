<?xml version="1.0"?>
<object meta_type="Dexterity FTI"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        i18n:domain="docpool.elan" name="ELANCurrentSituation">

 <!-- Basic metadata -->
 <property name="title" i18n:translate="">ELANCurrentSituation</property>
 <property name="description" i18n:translate=""></property>
 <property name="content_icon"></property>
 <property name="allow_discussion">False</property>
 <property name="global_allow">True</property>
 <property name="filter_content_types">True</property>
 <property name="allowed_content_types">
   <element value="ELANDocCollection" />
   <element value="ELANSection" />
   <element value="Document" />
   <element value="Journal" />
   <element value="Dashboard" />
 </property>
 <!-- schema interface -->
 <property name="schema">docpool.elan.content.elancurrentsituation.IELANCurrentSituation</property>

 <!-- class used for content items -->
 <property name="klass">docpool.elan.content.elancurrentsituation.ELANCurrentSituation</property>

 <!-- add permission -->
 <property name="add_permission">docpool.elan.AddELANCurrentSituation</property>

 <!-- enabled behaviors -->
 <property name="behaviors">
     <element value="plone.dublincore" />
     <element value="plone.namefromtitle" />
     <element value="plone.textindexer" />
     <element value="plone.allowdiscussion" />
     <element value="plone.excludefromnavigation" />
     <element value="plone.constraintypes" />
</property>

 <!-- View information -->
 <property name="default_view">tabular_view</property>
 <property name="default_view_fallback">False</property>
 <property name="view_methods">
  <element value="view" />

  <element value="summary_view" />
  <element value="tabular_view" />
  <element value="listing_view" />

 </property>
 <alias from="(Default)" to="(dynamic view)" />
 <alias from="edit" to="@@edit" />
 <alias from="sharing" to="@@sharing" />
 <alias from="view" to="(selected layout)" />

 <!-- Actions -->
  <action
      action_id="view"
      category="object"
      condition_expr=""
      i18n:attributes="title"
      title="View"
      url_expr="string:${object_url}"
      icon_expr="string:toolbar-action/view"
      visible="True">
    <permission value="View"/>
  </action>
  <action
      action_id="edit"
      category="object"
      condition_expr="not:object/@@plone_lock_info/is_locked_for_current_user|python:True"
      i18n:attributes="title"
      title="Edit"
      url_expr="string:${object_url}/edit"
      icon_expr="string:toolbar-action/edit"
      visible="True">
    <permission value="Modify portal content"/>
  </action>


</object>
