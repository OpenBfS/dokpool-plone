<tal:block i18n:domain="docpool.base">
<tal:var replace="nothing"><!-- ##code-section View --></tal:var>
<tal:def define="edoc options/edoc;
                 isOverview options/isOverview;
                 item_description edoc/Description;
                 item_url edoc/getURL;
                 item_type edoc/Type;
                 normalizeString nocall: context/plone_utils/normalizeString;
                 rs edoc/review_state;
                 item_wf_state_class python:'state-' + normalizeString(rs);
                 item_modified edoc/ModificationDate;
                 item_created edoc/CreationDate;
                 item_creator edoc/Creator;
                 toLocalizedTime nocall: context/@@plone/toLocalizedTime;
                 pas_member context/@@pas_member;
                 author python:pas_member.info(item_creator);
                 creator_fullname author/name_or_id">
                    

                    <td valign="top">
                      <span tal:condition="python:toLocalizedTime(item_modified, long_format=1) != toLocalizedTime(item_created, long_format=1)">
                         <i18n:txt translate="">modified:</i18n:txt> 
                         <span><tal:var replace="python:str(toLocalizedTime(item_modified, long_format=1))"/> <tal:var i18n:translate="">LT</tal:var></span>, 
                         <span tal:content="structure python:context.modified_by" />
                         <br><br>
                      </span>
                      <i18n:txt translate="">created:</i18n:txt> 
                      <span><tal:var replace="python:str(toLocalizedTime(item_created, long_format=1))"/> <tal:var i18n:translate="">LT</tal:var></span>,     
                      <span tal:content="structure python:context.created_by" />
                        <br><br><span tal:condition="python:item_description"
                              tal:content="structure item_description"> description </span>              
                    </td>


                   <td valign="top">
                         
                       <b>
                         <img src="" tal:attributes="src string:${context/portal_url}/folder_icon.png"/>&nbsp;<a href="" title="Show folder" i18n:attributes="title" tal:attributes="href python:item_url">
                               <span tal:attributes="class string:${item_wf_state_class};"
                                     tal:content="edoc/Title" /></a>

                       </b>
 
                         
                    </td>
</tal:def>    
<tal:var replace="nothing"><!-- ##/code-section View --></tal:var>   
</tal:block>