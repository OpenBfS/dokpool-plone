<registry xmlns:i18n="http://xml.zope.org/namespaces/i18n"
          i18n:domain="elan.sitrep">
  <record name="plone.displayed_types" interface="Products.CMFPlone.interfaces.controlpanel.INavigationSchema" field="displayed_types">
    <value purge="False">
      <element>SRConfig</element>
      <element>SRScenario</element>
      <element>SRPhase</element>
      <element>SRModuleConfig</element>
      <element>SRModuleTypes</element>
      <element>SRCollections</element>
      <element>SRTextBlocks</element>
      <element>SituationOverview</element>
      <element>SRFolder</element>
    </value>
  </record>
  <records prefix="plone.resources/elan-sitrep"
            interface='Products.CMFPlone.interfaces.IResourceRegistry'>
      <value key="js"></value>
      <value key="css">
        <element>++plone++elan.sitrep/sitrep.less</element>
      </value>
  </records>
  
  <records interface="Products.CMFPlone.interfaces.ITinyMCESchema" prefix="plone">
    <value key="other_settings">
  {
    "style_formats": [
      {
        "title": "Snippet",
        "inline": "span",
        "attributes": {
          "class": "snippet"
        }
      }
    ],
    "style_formats_merge": "True"
  }
    </value>
  </records>
</registry>
