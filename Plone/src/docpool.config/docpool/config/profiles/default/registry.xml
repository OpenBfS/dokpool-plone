<registry xmlns:i18n="http://xml.zope.org/namespaces/i18n"
          i18n:domain="docpool.config">
  <records prefix="plone.resources/docpool-config"
            interface='Products.CMFPlone.interfaces.IResourceRegistry'>
      <value key="js"></value>
      <value key="css">
        <element>++resource++docpool.config/custom.less</element>
      </value>
  </records>
  
  <records prefix="plone.bundles/docpool-config"
            interface='Products.CMFPlone.interfaces.IBundleRegistry'>
    <value key="resources">
      <element>docpool-config</element>
    </value>
    <value key="expression"></value>
    <value key="compile">True</value>
    <value key="enabled">True</value>
    <value key="depends">docpool</value>
    <value key="jscompilation">++plone++static/docpool-config-compiled.js</value>
    <value key="csscompilation">++plone++static/docpool-config-compiled.css</value>    
  </records>
>
</registry>