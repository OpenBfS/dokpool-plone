<registry xmlns:i18n="http://xml.zope.org/namespaces/i18n"
          i18n:domain="elan.esd">

  <record name="plone.displayed_types" interface="Products.CMFPlone.interfaces.controlpanel.INavigationSchema" field="displayed_types">
    <value purge="False">
      <element>ELANSection</element>
      <element>ELANCurrentSituation</element>
      <element>ELANArchive</element>
      <element>ELANArchives</element>
      <element>ELANInfos</element>
      <element>ELANDocCollection</element>
      <element>ELANContentConfig</element>
    </value>
  </record>

  <record field="description" interface="plone.app.querystring.interfaces.IQueryField" name="plone.app.querystring.field.dp_type.description">
    <field type="plone.registry.field.Text">
      <title>Description</title>
    </field>
    <value>The ELAN-E Document Type</value>
  </record>
  <record field="enabled" interface="plone.app.querystring.interfaces.IQueryField" name="plone.app.querystring.field.dp_type.enabled">
    <field type="plone.registry.field.Bool">
      <title>Enabled</title>
    </field>
    <value>True</value>
  </record>
  <record field="group" interface="plone.app.querystring.interfaces.IQueryField" name="plone.app.querystring.field.dp_type.group">
    <field type="plone.registry.field.TextLine">
      <title>Group</title>
    </field>
    <value>Metadata</value>
  </record>
  <record field="operations" interface="plone.app.querystring.interfaces.IQueryField" name="plone.app.querystring.field.dp_type.operations">
    <field type="plone.registry.field.List">
      <title>Operations</title>
      <value_type type="plone.registry.field.DottedName">
        <min_dots>0</min_dots>
        <title>Operation ID</title>
      </value_type>
    </field>
    <value>
      <element>plone.app.querystring.operation.selection.is</element>
    </value>
  </record>
  <record field="sortable" interface="plone.app.querystring.interfaces.IQueryField" name="plone.app.querystring.field.dp_type.sortable">
    <field type="plone.registry.field.Bool">
      <title>Sortable</title>
    </field>
    <value>True</value>
  </record>
  <record field="title" interface="plone.app.querystring.interfaces.IQueryField" name="plone.app.querystring.field.dp_type.title">
    <field type="plone.registry.field.TextLine">
      <title>Title</title>
    </field>
    <value>Document Type</value>
  </record>
  <record field="vocabulary" interface="plone.app.querystring.interfaces.IQueryField" name="plone.app.querystring.field.dp_type.vocabulary">
    <field type="plone.registry.field.TextLine">
      <title>Vocabulary</title>
    </field>
    <value>docpool.base.vocabularies.DocumentTypes</value>
  </record>
  <record field="description" interface="plone.app.querystring.interfaces.IQueryField" name="plone.app.querystring.field.scenarios.description">
    <field type="plone.registry.field.Text">
      <title>Description</title>
    </field>
    <value>Scenario categorization</value>
  </record>
  <record field="description" interface="plone.app.querystring.interfaces.IQueryField" name="plone.app.querystring.field.category.description">
    <field type="plone.registry.field.Text">
      <title>Description</title>
    </field>
    <value>The Content Category</value>
  </record>
  <record field="enabled" interface="plone.app.querystring.interfaces.IQueryField" name="plone.app.querystring.field.category.enabled">
    <field type="plone.registry.field.Bool">
      <title>Enabled</title>
    </field>
    <value>True</value>
  </record>
  <record field="group" interface="plone.app.querystring.interfaces.IQueryField" name="plone.app.querystring.field.category.group">
    <field type="plone.registry.field.TextLine">
      <title>Group</title>
    </field>
    <value>Metadata</value>
  </record>
  <record field="operations" interface="plone.app.querystring.interfaces.IQueryField" name="plone.app.querystring.field.category.operations">
    <field type="plone.registry.field.List">
      <title>Operations</title>
      <value_type type="plone.registry.field.DottedName">
        <min_dots>0</min_dots>
        <title>Operation ID</title>
      </value_type>
    </field>
    <value>
      <element>plone.app.querystring.operation.selection.is</element>
    </value>
  </record>
  <record field="sortable" interface="plone.app.querystring.interfaces.IQueryField" name="plone.app.querystring.field.category.sortable">
    <field type="plone.registry.field.Bool">
      <title>Sortable</title>
    </field>
    <value>True</value>
  </record>
  <record field="title" interface="plone.app.querystring.interfaces.IQueryField" name="plone.app.querystring.field.category.title">
    <field type="plone.registry.field.TextLine">
      <title>Title</title>
    </field>
    <value>ELAN-E Content Category</value>
  </record>
  <record field="vocabulary" interface="plone.app.querystring.interfaces.IQueryField" name="plone.app.querystring.field.category.vocabulary">
    <field type="plone.registry.field.TextLine">
      <title>Vocabulary</title>
    </field>
    <value>elan.esd.vocabularies.Categories</value>
  </record>
  <records interface="plone.app.querystring.interfaces.IQueryField"
         prefix="plone.app.querystring.field.mdate">
    <value key="title" i18n:translate="">Date of last user action</value>
    <value key="description" i18n:translate="">The time and date an item was last modified by a user</value>
    <value key="enabled">True</value>
    <value key="sortable">True</value>
    <value key="operations">
        <element>plone.app.querystring.operation.date.lessThan</element>
        <element>plone.app.querystring.operation.date.largerThan</element>
        <element>plone.app.querystring.operation.date.between</element>
        <element>plone.app.querystring.operation.date.lessThanRelativeDate</element>
        <element>plone.app.querystring.operation.date.largerThanRelativeDate</element>
        <element>plone.app.querystring.operation.date.today</element>
        <element>plone.app.querystring.operation.date.beforeToday</element>
        <element>plone.app.querystring.operation.date.afterToday</element>
    </value>
   	<value key="group" i18n:translate="">Dates</value>
  </records>
  <records interface="plone.app.querystring.interfaces.IQueryField"
           prefix="plone.app.querystring.field.path">
     <value key="title" i18n:translate="">Location</value>
     <value key="description" i18n:translate="">The location of an item </value>
     <value key="enabled">True</value>
     <value key="sortable">False</value>
     <value key="operations">
          <element>plone.app.querystring.operation.string.relativePath</element>
          <element>plone.app.querystring.operation.string.path</element>
     </value>
     <value key="group" i18n:translate="">Metadata</value>
  </records>
  
</registry>
