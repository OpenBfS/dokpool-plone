<html lang="en" xmlns="http://www.w3.org/1999/xhtml" xmlns:tal="http://xml.zope.org/namespaces/tal" i18n:domain="docpool.transfers" xml:lang="en" metal:use-macro="context/main_template/macros/master" xmlns:metal="http://xml.zope.org/namespaces/metal" xmlns:i18n="http://xml.zope.org/namespaces/i18n">
<body>

<metal:content-core fill-slot="content-core">
<metal:content-core define-macro="content-core">
<tal:def>

         <form method="post"
            id="doctransferform"
            name="transferform"
            action="#"
            tal:attributes="action string:${context/absolute_url}/@@dpdocument_transfer_form"
            tal:define="request context/REQUEST;
                        errors python:request.get('errors', {});
                        transfer_infos python:view.transfer_infos();
                        items python:transfer_infos['items'];
                        targets python:transfer_infos['targets'];
                        ">
        <input type="hidden" name="form.submitted" value="1" />

          <p>Tranfer items:
            <ul>
              <li tal:repeat="item items" tal:content="python: item.title">
            </li>
          </ul>

           <table summary="Inhalt" class="elanlistingtransferform listing" id="sortable">
            <thead>
                <tr>
                    <th class="nosort" i18n:translate="" width="5">Select</th>
                    <th class="nosort" i18n:translate="">Transfer to<br></th>
                    <th class="nosort" i18n:translate=""></th>
                    <th class="nosort" i18n:translate=""></th>
                </tr>
            </thead>
            <tbody tal:repeat="target targets">
               <tr class="notDraggable odd">
                   <td>
                      <input type="checkbox" checked="checked" title="" alt="" value="" name="targets:list" class="noborder" tal:attributes="value target/id;">
                   </td>
                   <td valign="top" tal:content="target/esd_to_title">Test1</td>
                   <td valign="top"></td>
                   <td></td>
               </tr>
            </tbody>
        </table>

        <span style="display:none;" id="redirecturl" tal:content="context/absolute_url"></span>
        <tal:block tal:repeat="item items">
          <input type="hidden" name="dpdocids:list" value="1" tal:attributes="value python:item.id" />
        </tal:block>
        <div class="formControls">
        <input type="submit" title="Absenden des Formulares" class="input-sichern context" name="form.button.submit" value="submit" i18n:attributes="value submitbutton;title submittitle"/>
        <input type="submit" title="Verlassen des Formulars" class="input-abbrechen" value="cancel" name="form.button.cancel" i18n:attributes="value cancelbutton;title canceltitle"/>
        </div>
      </form>
</tal:def>
</metal:content-core>
</metal:content-core>

</body>
</html>