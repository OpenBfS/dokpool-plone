<?xml version="1.0"?>
<rolemap>
  <roles>
    <role name="ContentReceiver"/>
    <role name="ContentSender"/>
  </roles>
  <permissions>
    <permission name="Docpool: Add ELANTransferFolder" acquire="True">
      <role name="Manager"/>
      <role name="Reviewer"/>
      <role name="Site Administrator"/>
      <role name="DocPoolAdmin"/>
    </permission>
    <permission name="Docpool: Add ELANTransfers" acquire="True">
      <role name="Manager"/>
      <role name="Site Administrator"/>
      <role name="DocPoolAdmin"/>
    </permission>
    <permission name="Docpool: Receive Content" acquire="True">
      <role name="ContentReceiver"/>
      <role name="Manager"/>
      <role name="Site Administrator"/>
      <role name="DocPoolAdmin"/>
    </permission>
    <permission name="Docpool: Send Content" acquire="True">
      <role name="ContentSender"/>
      <role name="Manager"/>
      <role name="Site Administrator"/>
      <role name="DocPoolAdmin"/>
    </permission>
  </permissions>
</rolemap>