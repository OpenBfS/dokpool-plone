<?xml version="1.0"?>
<dc-workflow workflow_id="rei_review_workflow_standard" title="REI Review Workflow standard" description="" state_variable="review_state"         initial_state="private" manager_bypass="False" >
 <group>bund_bfs</group>
 <group>bund_bmu</group>
 <group>bund_ab</group>
 <permission>ATContentTypes: Add File</permission>
 <permission>ATContentTypes: Add Image</permission>
 <permission>Access contents information</permission>
 <permission>Add portal content</permission>
 <permission>Delete objects</permission>
 <permission>Modify portal content</permission>
 <permission>Sharing page: Delegate roles</permission>
 <permission>View</permission>
 <state state_id="pending_bfs" title="Pending BfS" >
  <exit-transition transition_id="reject_to_authority" />
  <exit-transition transition_id="retract_to_authority" />
  <exit-transition transition_id="submit_bmu" />
  <permission-map name="ATContentTypes: Add File" acquired="True">
   
  </permission-map>
  <permission-map name="ATContentTypes: Add Image" acquired="True">
   
  </permission-map>
  <permission-map name="Access contents information" acquired="True">
   
  </permission-map>
  <permission-map name="Add portal content" acquired="True">
   
  </permission-map>
  <permission-map name="Delete objects" acquired="True">
   
  </permission-map>
  <permission-map name="Modify portal content" acquired="True">
   
  </permission-map>
  <permission-map name="Sharing page: Delegate roles" acquired="True">
   
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <group-map name="bund_ab">
   <group-role>Editor</group-role>
   <group-role>Owner</group-role>
  </group-map>
  <group-map name="bund_bfs">
   <group-role>Contributor</group-role>
   <group-role>Reviewer</group-role>
  </group-map>
  
 </state>
 <state state_id="pending_bmu" title="Pending BMU" >
  <exit-transition transition_id="publish" />
  <exit-transition transition_id="reject_to_bfs" />
  <exit-transition transition_id="retract_to_bfs" />
  <permission-map name="ATContentTypes: Add File" acquired="True">
   
  </permission-map>
  <permission-map name="ATContentTypes: Add Image" acquired="True">
   
  </permission-map>
  <permission-map name="Access contents information" acquired="True">
   
  </permission-map>
  <permission-map name="Add portal content" acquired="True">
   
  </permission-map>
  <permission-map name="Delete objects" acquired="True">
   
  </permission-map>
  <permission-map name="Modify portal content" acquired="True">
   
  </permission-map>
  <permission-map name="Sharing page: Delegate roles" acquired="True">
   
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <group-map name="bund_ab">
   <group-role>Editor</group-role>
  </group-map>
  <group-map name="bund_bfs">
   <group-role>Contributor</group-role>
   <group-role>Owner</group-role>
  </group-map>
  <group-map name="bund_bmu">
   <group-role>Reviewer</group-role>
  </group-map>
  
 </state>
 <state state_id="private" title="Private" >
  <description>Can only be seen and edited by the owner.</description>
  <exit-transition transition_id="submit_bfs" />
  <permission-map name="ATContentTypes: Add File" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="ATContentTypes: Add Image" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Site Administrator</permission-role>
   <permission-role>DocPoolAdmin</permission-role>
  </permission-map>
  <permission-map name="Add portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Site Administrator</permission-role>
   <permission-role>DocPoolAdmin</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Sharing page: Delegate roles" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Site Administrator</permission-role>
   <permission-role>DocPoolAdmin</permission-role>
  </permission-map>
  
  
 </state>
 <state state_id="published" title="Published" >
  <description>Visible to everyone, editable by the owner.</description>
  <exit-transition transition_id="retract_for_revision" />
  <permission-map name="ATContentTypes: Add File" acquired="False">
   
  </permission-map>
  <permission-map name="ATContentTypes: Add Image" acquired="False">
   
  </permission-map>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <permission-map name="Add portal content" acquired="False">
   
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
   <permission-role>DocPoolAdmin</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Sharing page: Delegate roles" acquired="False">
   
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <group-map name="bund_bfs">
   <group-role>Contributor</group-role>
   <group-role>Owner</group-role>
  </group-map>
  <group-map name="bund_bmu">
   <group-role>Reviewer</group-role>
  </group-map>
  
 </state>
 <state state_id="revised" title="Revised" >
  
  <permission-map name="ATContentTypes: Add File" acquired="True">
   
  </permission-map>
  <permission-map name="ATContentTypes: Add Image" acquired="True">
   
  </permission-map>
  <permission-map name="Access contents information" acquired="True">
   
  </permission-map>
  <permission-map name="Add portal content" acquired="True">
   
  </permission-map>
  <permission-map name="Delete objects" acquired="True">
   
  </permission-map>
  <permission-map name="Modify portal content" acquired="True">
   
  </permission-map>
  <permission-map name="Sharing page: Delegate roles" acquired="True">
   
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <group-map name="bund_bfs">
   <group-role>Contributor</group-role>
  </group-map>
  <group-map name="bund_bmu">
   <group-role>Reviewer</group-role>
  </group-map>
  
 </state>
 <transition transition_id="publish" title="Reviewer publishes content" new_state="published" trigger="USER" before_script="" after_script="" >
  <description>Publishing the item makes it visible to other users.</description>
  <action url="%(content_url)s/content_status_modify?workflow_action=publish" category="workflow" icon="">Publish</action>
  <guard >
   <guard-role>Reviewer</guard-role>
   <guard-role>Manager</guard-role>
   <guard-role>Site Administrator</guard-role>
  </guard>
  
 </transition>
 <transition transition_id="reject_to_authority" title="Send back to authority" new_state="pending_authority" trigger="USER" before_script="" after_script="" >
  <action url="%(content_url)s/content_status_modify?workflow_action=reject_to_authority" category="workflow" icon="">Send back to authority</action>
  <guard >
   <guard-role>Contributor</guard-role>
   <guard-role>Manager</guard-role>
   <guard-role>Site Administrator</guard-role>
  </guard>
  
 </transition>
 <transition transition_id="reject_to_bfs" title="Send back to BfS" new_state="pending_bfs" trigger="USER" before_script="" after_script="" >
  <action url="%(content_url)s/content_status_modify?workflow_action=reject_to_bfs" category="workflow" icon="">Send back to BfS</action>
  <guard >
   <guard-role>Reviewer</guard-role>
   <guard-role>Manager</guard-role>
   <guard-role>Site Administrator</guard-role>
  </guard>
  
 </transition>
  <transition transition_id="retract_for_revision" title="" new_state="revised" trigger="USER" before_script="" after_script="" >
  <action url="" category="workflow" icon="">Retract for Revision</action>
  <guard >
   <guard-role>Reviewer</guard-role>
   <guard-role>Contributor</guard-role>
   <guard-role>Owner</guard-role>
   <guard-role>Manager</guard-role>
   <guard-role>Site Administrator</guard-role>
  </guard>
  
 </transition>
 <transition transition_id="retract_to_authority" title="Retract to authority" new_state="pending_authority" trigger="USER" before_script="" after_script="" >
  <action url="%(content_url)s/content_status_modify?workflow_action=retract_to_authority" category="workflow" icon="">Retract to authority</action>
  <guard >
   <guard-role>Editor</guard-role>
   <guard-role>Owner</guard-role>
   <guard-role>Manager</guard-role>
   <guard-role>Site Administrator</guard-role>
  </guard>
  
 </transition>
 <transition transition_id="retract_to_bfs" title="Retract to BfS" new_state="pending_bfs" trigger="USER" before_script="" after_script="" >
  <action url="%(content_url)s/content_status_modify?workflow_action=retract_to_bfs" category="workflow" icon="">Retract to BfS</action>
  <guard >
   <guard-role>Contributor</guard-role>
   <guard-role>Manager</guard-role>
   <guard-role>Site Administrator</guard-role>
  </guard>
  
 </transition>
  <transition transition_id="submit_bfs" title="Submit to BfS" new_state="pending_bfs" trigger="USER" before_script="" after_script="" >
  <action url="%(content_url)s/content_status_modify?workflow_action=submit_bfs" category="workflow" icon="">Submit to BfS</action>
  <guard >
   <guard-role>Reviewer</guard-role>
   <guard-role>Manager</guard-role>
   <guard-role>Site Administrator</guard-role>
  </guard>
  
 </transition>
 <transition transition_id="submit_bmu" title="Submit to BMU" new_state="pending_bmu" trigger="USER" before_script="" after_script="" >
  <action url="%(content_url)s/content_status_modify?workflow_action=submit_bmu" category="workflow" icon="">Submit to BMU</action>
  <guard >
   <guard-role>Contributor</guard-role>
   <guard-role>Manager</guard-role>
   <guard-role>Site Administrator</guard-role>
  </guard>
  
 </transition>
  
 <worklist worklist_id="reviewer_queue" title="" >
  <description>Reviewer tasks</description>
  <action url="%(portal_url)s/search?review_state=pending" category="global" icon="">Pending (%(count)d)</action>
  <guard >
   <guard-permission>Review portal content</guard-permission>
  </guard>
  <match name="review_state" values="pending" />
 </worklist>
 <variable variable_id="action" for_catalog="False" for_status="True" update_always="True" >
  <description>Previous transition</description>
  <default>
   
   <expression>transition/getId|nothing</expression>
  </default>
  <guard >
  </guard>
 </variable>
 <variable variable_id="actor" for_catalog="False" for_status="True" update_always="True" >
  <description>The ID of the user who performed the previous transition</description>
  <default>
   
   <expression>user/getId</expression>
  </default>
  <guard >
  </guard>
 </variable>
 <variable variable_id="comments" for_catalog="False" for_status="True" update_always="True" >
  <description>Comment about the last transition</description>
  <default>
   
   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard >
  </guard>
 </variable>
 <variable variable_id="review_history" for_catalog="False" for_status="False" update_always="False" >
  <description>Provides access to workflow history</description>
  <default>
   
   <expression>state_change/getHistory</expression>
  </default>
  <guard >
   <guard-permission>Request review</guard-permission>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </variable>
 <variable variable_id="time" for_catalog="False" for_status="True" update_always="True" >
  <description>When the previous transition was performed</description>
  <default>
   
   <expression>state_change/getDateTime</expression>
  </default>
  <guard >
  </guard>
 </variable>
 
</dc-workflow>
