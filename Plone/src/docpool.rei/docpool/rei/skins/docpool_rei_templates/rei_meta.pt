<tal:block i18n:domain="docpool.rei"
           define="view nocall:options/view;
                   context nocall:options/context;
                   here nocall:context;
                   toLocalizedTime nocall: context/@@plone/toLocalizedTime;">
    <tal:def define="reiobj view">
        <!-- context will be the the DPDocument instance, reiobj will be the behaviour wrapper -->
        <p>-------------------------------------------------</p>
        Bundesland:
        <span tal:condition="python:hasattr(reiobj,'FederalState')">
           <tal:var replace="reiobj/FederalState"/>
        </span>
         Kerntechnische Anlage:
        <span tal:condition="python:hasattr(reiobj,'NuclearInstallation')">
           <tal:var replace="reiobj/NuclearInstallation"/>
        </span><br>
        Jahr:
        <span tal:condition="python:hasattr(reiobj,'Year')">
           <tal:var replace="reiobj/Year"/>
        </span>/
        <span tal:condition="python:hasattr(reiobj,'Period')">
           <tal:var replace="reiobj/Period"/>
        </span><br>
        <span tal:condition="python:hasattr(reiobj,'ReiLegalBase')">
           <tal:var replace="reiobj/ReiLegalBase"/>
        </span><br>
        <span tal:condition="python:hasattr(reiobj,'Media')">
           <tal:var replace="reiobj/Media"/>
        </span>-

        <p>-------------------------------------------------</p>
    </tal:def>
</tal:block>
