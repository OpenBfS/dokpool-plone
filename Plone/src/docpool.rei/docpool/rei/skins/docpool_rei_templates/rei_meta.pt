<tal:block i18n:domain="docpool.rei"
           define="view nocall:options/view;
                   context nocall:options/context;
                   here nocall:context;
                   toLocalizedTime nocall: context/@@plone/toLocalizedTime;">
    <tal:def define="reiobj python:view">
        <!-- context will be the the DPDocument instance, reiobj will be the behaviour wrapper -->

        <label i18n:translate="label_rei_Authority">Authority</label>:
        <span tal:condition="python:hasattr(reiobj,'Authority')">
           <tal:var replace="reiobj/Authority"/>
        </span><br>

        <label i18n:translate="label_rei_MstId">MstId</label>:
        <span tal:condition="python:hasattr(reiobj,'MstId')">
           <tal:var replace="python: ', '.join(reiobj.MstId)"/>
        </span><br>

        <label i18n:translate="label_rei_ReiLegalBase">ReiLegalBase</label>:
        <span tal:condition="python:hasattr(reiobj,'ReiLegalBase')">
           <tal:var replace="reiobj/ReiLegalBase"/>
        </span><br>

        <label i18n:translate="label_rei_Origin">Origin</label>:
        <span tal:condition="python:hasattr(reiobj,'Origin')">
           <tal:var replace="python: ', '.join(reiobj.Origin)"/>
        </span><br>

        <label i18n:translate="label_rei_Year">Year</label>:
        <span tal:condition="python:hasattr(reiobj,'Year')">
           <tal:var replace="reiobj/Year"/>
        </span><br>

        <label i18n:translate="label_rei_Media">Media</label>:
        <span tal:condition="python:hasattr(reiobj,'Media')">
           <tal:var replace="reiobj/Media"/>
        </span><br>

        <label i18n:translate="label_rei_NuclearInstallation">NuclearInstallation</label>:
        <span tal:condition="python:hasattr(reiobj,'NuclearInstallation')">
           <tal:var replace="reiobj/NuclearInstallation"/>
        </span><br>

        <label i18n:translate="label_rei_PdfVersion">PdfVersion</label>:
        <span tal:condition="python:hasattr(reiobj,'PdfVersion')">
           <tal:var replace="reiobj/PdfVersion"/>
        </span><br>

    </tal:def>
</tal:block>
