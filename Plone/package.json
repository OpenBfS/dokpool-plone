{
  "name": "docpool.theme",
  "version": "2.0.0",
  "description": "",
  "main": "webpack.config.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "npm-run-all build:webpack build:css",
    "build:webpack": "NODE_ENV=production webpack --config webpack.config.js",
    "build:css": "npm-run-all css-compile-theme css-minify-theme",
    "css-compile-theme": "sass --load-path=node_modules --style expanded --source-map --embed-sources --no-error-css src/docpool.theme/docpool/theme/resources/theme.scss:src/docpool.theme/docpool/theme/static/theme.css",
    "css-minify-theme": "cleancss --format breakWith=lf --source-map --source-map-inline-sources --output src/docpool.theme/docpool/theme/static/theme.min.css src/docpool.theme/docpool/theme/static/theme.css",
    "watch": "nodemon --watch src/ --ext scss --exec \"npm run build\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenBfS/dokpool-plone.git"
  },
  "keywords": [
    "Plone",
    "bfs"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/OpenBfS/dokpool-plone/issues"
  },
  "homepage": "https://github.com/OpenBfS/dokpool-plone#readme",
  "devDependencies": {
    "bootstrap": "^5.2.1",
    "clean-css-cli": "^5.6.1",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "sass": "^1.54.9",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.0"
  }
}
