<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      xml:lang="en"
      i18n:domain="docpool.elan"
>
  <body>
    <metal:content-core fill-slot="content-core">
      <metal:content-core define-macro="content-core">
        <table class="table table-striped table-responsive table-bordered"
               tal:define="
                 toLocalizedTime nocall: context/@@plone/toLocalizedTime;
               "
        >
          <thead>
            <tr>
              <th i18n:translate="">Archived</th>
              <th i18n:translate="">Title/Description</th>
              <th i18n:translate="">Entries</th>
            </tr>
          </thead>
          <tbody>
            <tr tal:repeat="archive python:view.get_archives()">
              <td>
                <span tal:content="python: toLocalizedTime(archive.Date(), long_format=True)"></span>
                <span i18n:translate="">by</span>
                <span tal:content="python: view.get_user_info_string(archive.Creator())"></span>
              </td>
              <td>
                <a href=""
                   tal:attributes="
                     href python: archive.absolute_url();
                   "
                >
                  <b tal:content="python: archive.title">
                                Title
                  </b>
                </a>
                <br />
                <span tal:content="python:archive.description"></span>
              </td>
              <td tal:content="python: view.number_of_entries(archive)"></td>
            </tr>
          </tbody>
        </table>
      </metal:content-core>
    </metal:content-core>
  </body>
</html>
