<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="context/main_template/macros/master"
      xml:lang="en"
      i18n:domain="elan.journal"
>
  <metal:block fill-slot="top_slot"
               tal:define="
                 dummy python:request.set('disable_border', 1);
               "
  />
  <body>
    <metal:block fill-slot="main">
      <h1 i18n:translate="">Edit journalentry</h1>
      <form action="@@edit-journalentry"
            method="post"
            tal:attributes="
              action string:${context/absolute_url}/@@edit-journalentry;
            "
      >
        <div class="field">
          <tal:editor define="
                        here nocall:context;
                        portal_url nocall:context/portal_url;
                        portal portal_url/getPortalObject;
                        id string:text;
                        inputname string:text;
                        inputvalue view/text;
                        here_url request/getURL;
                        member context/portal_membership/getAuthenticatedMember;
                        tabindex nothing;
                        rows python:15;
                      ">
            <div metal:use-macro="context/wysiwyg_support/macros/wysiwygEditorBox">
            The WYSIWYG code
            </div>
          </tal:editor>
        </div>
        <div class="formControls">
          <input class="btn btn-primary"
                 id="form-buttons-save"
                 name="form.buttons.save"
                 type="submit"
                 value="Save"
                 i18n:attributes="value"
                 i18n:domain="plone"
          />
          <input class="btn btn-secondary"
                 id="form-buttons-cancel"
                 name="form.buttons.cancel"
                 type="submit"
                 value="Cancel"
                 i18n:attributes="value"
                 i18n:domain="plone"
          />
        </div>
        <input name="id"
               type="hidden"
               value=""
               tal:attributes="
                 value request/id;
               "
        />
      </form>
    </metal:block>
  </body>
</html>
