<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="context/main_template/macros/master"
      xml:lang="en"
      i18n:domain="elan.journal"
>
  <head>
    <metal:block metal:fill-slot="top_slot"
                 tal:define="
                   dummy python:request.set('disable_border', 1);
                 "
    />
  </head>
  <body>
    <metal:block fill-slot="main">
      <article itemscope
               itemtype="http://schema.org/BlogPosting"
               tal:define="
                 update view/update;
               "
      >
        <header>
          <div tal:replace="structure provider:plone.abovecontenttitle"></div>

          <h1 class="documentFirstHeading"
              itemprop="headline"
              tal:condition="update/title"
              tal:content="update/title"
          >
            Title
          </h1>

          <div class="documentByLine"
               id="plone-document-byline"
               tal:define="
                 item_creator update/creator;
                 pas_member nocall: context/@@pas_member;
                 author python:pas_member.info(item_creator);
                 creator_fullname author/name_or_id;
               "
               tal:condition="view/show_byline"
               i18n:domain="plone"
          >
            <span class="documentAuthor"
                  tal:condition="not:view/is_anonymous"
            >
              (<span property="rnews:author"
                    tal:content="creator_fullname"
              >
                .
              </span>)
              &mdash;
            </span>

            <tal:dates define="
                         published update/datetime;
                         modified update/modified;
                       ">
              <span class="documentPublished">
                <span i18n:translate="box_published">
                  published
                </span>
                <span property="rnews:datePublished"
                      tal:content="published"
                >
                  August 16, 2001 at 23:35:59
                </span><tal:sep condition="modified">,</tal:sep>
              </span>

              <span class="documentModified"
                    tal:condition="modified"
              >
                <span i18n:translate="box_last_modified">
                  last modified
                </span>
                <span property="rnews:dateModified"
                      tal:content="modified"
                >
                  August 16, 2001 at 23:35:59
                </span>
              </span>
            </tal:dates>
          </div>
        </header>

        <div tal:replace="structure provider:plone.abovecontentbody"></div>

        <div id="content-core"
             itemprop="articleBody"
        >
          <section>
            <article class="journalentry"
                     itemprop="comment"
                     itemscope
                     itemtype="http://schema.org/Comment"
                     tal:attributes="
                       data-timestamp update/timestamp;
                     "
            >
              <div class="journalentry-text"
                   itemprop="text"
                   tal:content="structure update/text"
              ></div>
            </article>
          </section>
        </div>

        <div tal:replace="structure provider:plone.belowcontentbody"></div>

        <div class="journalentry-back">
          <span tal:omit-tag=""
                i18n:translate=""
          >Extracted from:</span>
          <a tal:content="context/Title"
             tal:attributes="
               href context/absolute_url;
             "
          >Journal</a>
        </div>
      </article>
    </metal:block>
  </body>
</html>
