<?xml version="1.0"?>
<object meta_type="Dexterity FTI" xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="docpool.base" name="GroupFolder">

 <!-- Basic metadata -->
 <property name="title" i18n:translate="">Group Folder</property>
 <property name="description" i18n:translate=""></property>
 <property name="content_icon"></property>
 <property name="allow_discussion">False</property>
 <property name="global_allow">False</property>
 <property name="filter_content_types">True</property>
 <property name="allowed_content_types">


             <element value="PrivateFolder" />


             <element value="SimpleFolder" />


             <element value="ReviewFolder" />


             <element value="CollaborationFolder" />


             <element value="InfoFolder" />


             <element value="DPDocument" />


             <element value="Collection" />

 </property>
 <!-- schema interface -->
 <property name="schema">docpool.base.content.groupfolder.IGroupFolder</property>

 <!-- class used for content items -->
 <property name="klass">docpool.base.content.groupfolder.GroupFolder</property>

 <!-- add permission -->
 <property name="add_permission">docpool.base.AddGroupFolder</property>

 <!-- enabled behaviors -->
 <property name="behaviors">
     <element value="plone.dublincore" />
     <element value="plone.namefromtitle" />
     <element value="plone.textindexer" />
     <element value="plone.excludefromnavigation" />
     <element value="plone.constraintypes" />
     <element value="docpool.localbehavior" />
</property>

 <!-- View information -->
 <property name="default_view">view</property>
 <property name="default_view_fallback">False</property>
 <property name="view_methods">
  <element value="view" />

  <element value="summary_view" />
  <element value="tabular_view" />
  <element value="listing_view" />

 </property>
 <alias from="(Default)" to="(dynamic view)" />
 <alias from="edit" to="@@edit" />
 <alias from="sharing" to="@@sharing" />
 <alias from="view" to="(selected layout)" />

 <!-- Actions -->
 <action title="View" action_id="view" category="object" condition_expr="" url_expr="string:${object_url}" icon_expr="string:toolbar-action/view" visible="True">
  <permission value="View" />
 </action>
 <action title="Edit" action_id="edit" category="object" condition_expr="context/@@is/admin" url_expr="string:${object_url}/edit" icon_expr="string:toolbar-action/edit" visible="True">
  <permission value="" />
 </action>

</object>
