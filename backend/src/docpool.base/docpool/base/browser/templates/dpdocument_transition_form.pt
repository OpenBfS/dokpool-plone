<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      xml:lang="en"
      i18n:domain="plone"
>
  <body>

    <metal:content-core fill-slot="main">
      <metal:content-core define-macro="main">

        <tal:def tal:define="
                   errors python:view.errors;
                   transitions python:view.transitions;
                   items python: view.items;
                   can_transition python: items and transitions;
                 ">
          <div tal:condition="python: not can_transition"
               i18n:domain="docpool.base"
          >
            <h2 i18n:translate="">No items or transitions!</h2>
            <span>--&gt;
              <a href=""
                 tal:attributes="
                   href python:context.absolute_url();
                 "
              ><span i18n:translate="">back to</span>
                <span tal:content="python:context.title_or_id()"></span></a></span>
          </div>

          <div tal:condition="python: errors">
            <p tal:repeat="error errors"
               tal:content="error"
            ></p>
          </div>

          <form id="doctransitionform"
                action="#"
                method="post"
                name="transitionform"
                tal:condition="python: can_transition"
                tal:attributes="
                  action string:${context/absolute_url}/@@dpdocument_transition_form;
                "
          >

            <h2 i18n:translate="">Transition</h2>

            <table class="listing">
              <thead>
                <tr>
                  <th class="nosort"
                      i18n:translate=""
                  >Title</th>
                  <th class="nosort"
                      i18n:domain="docpool.base"
                      i18n:translate=""
                  >Available transitions</th>
                </tr>
              </thead>
              <tbody>
                <tr tal:repeat="item python:items">
                  <td valign="top"
                      tal:content="python: item['title']"
                  >Test1</td>
                  <td valign="top"
                      tal:content="structure python: '<br/>'.join(item['transitions'])"
                  ></td>
                </tr>
              </tbody>
            </table>


            <div class="form-group">
              <label i18n:translate="label_change_status">Change State</label>
              <p class="help-block"
                 i18n:domain="docpool.base"
                 i18n:translate="help_change_status_action"
              >Select the transition to be used for modifying the items state.</p>
              <select class="form-control"
                      name="transition"
              >
                <option value="publish"
                        tal:repeat="transition python: transitions"
                        tal:content="python:transition['title']"
                        tal:attributes="
                          value python:transition['id'];
                        "
                >
            Publish
                </option>
              </select>
            </div>

            <tal:block tal:repeat="item items">
              <input name="paths:list"
                     type="hidden"
                     value="1"
                     tal:attributes="
                       value python:item['path'];
                     "
              />
            </tal:block>

            <div class="formControls">
              <input class="input-sichern btn btn-primary context"
                     name="form.button.submit"
                     type="submit"
                     value="Apply"
                     tal:define="
                       alert_msg python:context.translate('alert_transition', default='Do you really want apply this transition?', domain='docpool.base', escape_for_js=True);
                     "
                     tal:attributes="
                       onclick string:return confirm('${alert_msg}');
                     "
                     i18n:attributes="value label_apply; title"
              />
              <input class="input-abbrechen btn btn-secondary"
                     name="form.button.cancel"
                     type="submit"
                     value="Cancel"
                     i18n:attributes="value; title"
              />
            </div>

          </form>

        </tal:def>

      </metal:content-core>
    </metal:content-core>

  </body>
</html>
