<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      xml:lang="en"
      i18n:domain="docpool.base"
>
  <body>
    <metal:content-core fill-slot="main">
      <metal:content-core define-macro="main">

        <tal:def define="
                   doc view/doc;
                 "
                 condition="doc"
        >
          <h1 class="documentFirstHeading"
              tal:content="doc/Title"
          ></h1>
          <div class="documentDescription"
               tal:content="doc/Description"
          ></div>
          <tal:if condition="doc/isInOneOfMyFolders">

            <span tal:condition="doc/canBeEdited">
              <a class="docref"
                 href=""
                 tal:attributes="
                   href string:${doc/absolute_url}/edit;
                 "
                 i18n:translate=""
              >Edit the document</a>
            </span>
            <!-- not necessary ?
                <span tal:condition="not:doc/canBeEdited">
                   <a href="" tal:attributes="href string:${doc/absolute_url}/view" class="docref" i18n:translate="">View the document</a>
                </span>
-->
            <br />
            <span tal:define="
                    state python:view.wf_state(doc);
                  ">
              <i18n:var translate="">Document state</i18n:var>:
              <span class="state-${state/id}"
                    i18n:domain="plone"
                    i18n:translate=""
              >${state/title}</span>
            </span>
            <tal:loop define="
                        actions doc/workflowActions;
                        myfolder_url python:doc.myFolderBase().absolute_url();
                      "
                      repeat="action actions"
            >

              <tal:defi tal:define="
                          a_id action/id;
                          portal context/plone_portal_state/portal;
                          _is nocall:doc/@@is;
                          alert_msg python: _is.rei_workflow() and
                                          context.translate('alert_' + a_id + '_popup',
                                          default='Do you really want to publish this document?',
                                          domain='docpool.rei',
                                          escape_for_js=True) or

                                          context.translate('alert_' + a_id + '_popup',
                                          default='Do you really want to publish this document?',
                                          domain='docpool.base',
                                          escape_for_js=True);
                        ">

                <br /><i18n:var translate="">Document workflow:</i18n:var>
                <a class="wf_action action"
                   href=""
                   onclick=""
                   title=""
                   tal:define="
                     a_title python: view.translate_wf_action(doc, action);
                   "
                   tal:attributes="
                     onclick string:return confirm('${doc/Title}: ${alert_msg}');
                     href python:'%s/@@change_state?action=%s&back_to_referer=1' % (doc.absolute_url(), a_id);
                     title a_title;
                   "
                   i18n:attributes="title"
                >
                  <tal:var replace="a_title"
                           i18n:domain="plone"
                           i18n:translate=""
                  />
                </a>

              </tal:defi>
            </tal:loop>
            <br /><br />
          </tal:if>

          <div tal:replace="structure view/doc_inline"></div>

        </tal:def>

      </metal:content-core>
    </metal:content-core>
  </body>
</html>
