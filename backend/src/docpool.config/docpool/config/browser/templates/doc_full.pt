<tal:block define="
             view nocall:options/view;
           "
           i18n:domain="docpool.base"
>
  <tal:def define="
             edit_allowed context/canBeEdited;
             toLocalizedTime nocall: context/@@plone/toLocalizedTime;
           ">
    <div metal:use-macro="context/@@dp.macros/macros/doc_complete"></div>

    <tal:if condition="python:context.uploadsAllowed() and edit_allowed">
      <div metal:use-macro="context/@@dp.macros/macros/fileupload"></div>

      <input class="btn btn-primary"
             name="form.button.save"
             onclick="window.location.href='content_status_modify?workflow_action=publish';return false;"
             type="submit"
             value="Finish uploads and publish"
             tal:define="
               _is nocall:context/@@is;
             "
             tal:condition="python:context.publishedImmediately(raw=True) and not _is.individual()"
             i18n:attributes="value"
      />

    </tal:if>
  </tal:def>
</tal:block>
