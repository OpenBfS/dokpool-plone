<tal:block define="
             view nocall:options/view;
           "
           i18n:domain="docpool.base"
>
  <tal:def define="
             edit_allowed context/canBeEdited;
           ">
    <tal:if define="
              htmltext context/text/output|nothing;
            "
            condition="htmltext"
    >
      <label i18n:translate="">Content:</label>
      <span tal:content="structure htmltext"
            tal:attributes="
              id string:html_${context/getId};
            "
      ></span>
    </tal:if>
    <br /><br />
    <div metal:use-macro="context/@@dp.macros/macros/doc_files"></div>
    <br /><br />
    <div metal:use-macro="context/@@dp.macros/macros/doc_images"></div>
    <div metal:use-macro="context/@@dp.macros/macros/fileupload"></div>
  </tal:def>
</tal:block>
