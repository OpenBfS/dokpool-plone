<tal:block define="
             view nocall:options/view;
             toLocalizedTime nocall: context/@@plone/toLocalizedTime;
             edit_allowed python: False;
           "
           i18n:domain="docpool.base"
>
  <div metal:use-macro="context/@@dp.macros/macros/doc_data"></div>

  <div class="visualization"
       tal:define="
         mi python: context.getMapImageObj();
         li python: context.getLegendImageObj();
         files python: context.getFiles();
       "
  >
    <tal:block tal:condition="python: context.objectCount()">

      <tal:block tal:condition="python: mi and li">
        <div class="map">
          <a href="${python: mi.absolute_url()}"
             target="_blank"
             i18n:domain="docpool.config"
             i18n:translate=""
          >
            <tal:insert replace="structure python: context.getMapImage()" />
          </a>
        </div>
        <div class="legend">
          <tal:insert replace="structure python: context.getLegendImage()" />
        </div>
      </tal:block>

      <tal:block tal:condition="python: not mi or not li">
        <div class="whole">
          <div metal:use-macro="context/@@dp.macros/macros/doc_images"></div>
        </div>
      </tal:block>

      <tal:block tal:condition="python: files">
        <div class="pdflink">
          <tal:block tal:condition="python: mi or li">
            <a href="${python:files[0].absolute_url()}"
               target="_blank"
               i18n:domain="docpool.config"
               i18n:translate=""
            >Printable version</a>
          </tal:block>
          <tal:block tal:condition="python: not mi or not li">
            <div metal:use-macro="context/@@dp.macros/macros/doc_files"></div>
          </tal:block>
        </div>
      </tal:block>
    </tal:block>

  </div>
</tal:block>
