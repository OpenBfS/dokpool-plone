<tal:block define="
             view nocall:options/view;
             toLocalizedTime nocall: context/@@plone/toLocalizedTime;
           "
           i18n:domain="docpool.base"
>
  <div class="metadata"><a href=""
       title=""
       tal:attributes="
         title string:${context/Title}';
         href string:javascript:go_to('${context/absolute_url}');
       "
    >
      <span class="title">${context/Title}</span>
      -
      <i18n:txt translate="">modified:</i18n:txt>
      <span class="time"><tal:var replace="python:str(toLocalizedTime(context.getMdate(), long_format=1))" />
        <tal:var i18n:translate="">LT</tal:var></span></a>

  </div>
  <div class="visualization"
       tal:define="
         mi context/getMapImageObj;
         li context/getLegendImageObj;
         fi context/getFirstImage;
       "
  >
    <span tal:condition="python:mi and li">
      <div class="map">
        <tal:insert replace="structure context/getMapImage" />
      </div>
      <div class="legend">
        <tal:insert replace="structure context/getLegendImage" />
      </div>
    </span>
    <div class="pdf">
      <img src="${context/absolute_url}/docimage" />
    </div>
    <span tal:condition="python:not(mi and li)">
      <div class="whole"
           tal:condition="python: fi"
      >
        <tal:insert replace="structure fi" />
      </div>
    </span>
  </div>
</tal:block>
