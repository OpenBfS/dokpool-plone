<tal:block i18n:domain="docpool.elan">
  <div id="mesz" tal:define="DateTime python:modules['DateTime'].DateTime;">
    <table class="table table-bordered" id="time_table" tal:define="now python:DateTime();
      nowUTC python: DateTime().toZone('UTC').asdatetime();">
      <tr class="times">
        <td class="zone">
          <tal:var i18n:translate="">LT</tal:var>
          :
        </td>
        <td class="time">
          <time class="pat-display-time"
                datetime="${now}"
                data-pat-display-time="output-format:L LT"
             tal:content=""
          >${now}</time>
        </td>
      </tr>
      <tr class="times">
        <td class="zone">
          <tal:var i18n:translate="">UTC</tal:var>
          :
        </td>
        <td class="time">
          <time datetime="${nowUTC}"
             tal:content="python: nowUTC.strftime('%d.%m.%Y %H:%M')"
          ></time>
        </td>
      </tr>
    </table>
  </div>
</tal:block>
