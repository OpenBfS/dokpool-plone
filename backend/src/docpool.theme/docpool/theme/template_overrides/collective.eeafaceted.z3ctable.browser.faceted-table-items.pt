<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      xml:lang="en"
      i18n:domain="docpool.theme"
>

  <body>
    <metal:content-core fill-slot="content-core">
      <metal:block define-macro="content-core">
        <div tal:define="
               batch python: folderContents;
             ">

          <div metal:use-macro="context/global_statusmessage/macros/portal_message">
          Portal status message
          </div>

          <div id="viewlet-top-above-nav"
               tal:content="structure provider:collective.eeafaceted.z3ctable.topabovenav"
          ></div>

          <div metal:use-macro="context/batch_macros/macros/navigation"></div>

          <div id="viewlet-top-below-nav"
               tal:content="structure provider:collective.eeafaceted.z3ctable.topbelownav"
          ></div>

          <div class="table_faceted_results">
            <span tal:condition="batch/sequence_length"
                  i18n:domain="plone"
                  i18n:translate="batch_x_items_matching_your_criteria"
            >
              <strong id="search-results-number"
                      tal:content="batch/sequence_length|string:0"
                      i18n:name="number"
              >234</strong>
            items matching your search terms.
            </span>
            <span class="table_faceted_no_results"
                  tal:condition="not: batch/sequence_length"
                  i18n:domain="plone"
                  i18n:translate="description_no_results_found"
            >No results were found.</span>

            <a href="#"
               onclick="event.preventDefault(); Faceted.URLHandler.hash_changed();"
            >
              <img src="#"
                   tal:attributes="
                     src string:${context/portal_url}/++resource++collective.eeafaceted.z3ctable/refresh.gif;
                   "
              /><span i18n:domain="docpool.theme"
                    i18n:translate="refresh_results"
              >Refresh search results.</span>
            </a>
            <span id="z3ctabel-toggles">
              <a class="z3ctable-toggle-metatitle"
                 href="#"
                 title="Metatitel"
                 i18n:attributes="title"
              >
                <img src="#"
                     tal:attributes="
                       src string:${context/portal_url}/++plone++docpool.rei/title.png;
                     "
                />
                <span i18n:domain="docpool.theme"
                      i18n:translate=""
                >Open/close all metatitle</span>
              </a>
              <a class="z3ctable-toggle-metadata"
                 href="#"
                 title="Metadaten"
                 i18n:attributes="title"
              >
                <img src="#"
                     tal:attributes="
                       src string:${context/portal_url}/++plone++docpool.rei/titles_and_metainfos.svg;
                     "
                /><span i18n:domain="docpool.theme"
                      i18n:translate=""
                >Open/close all metadata</span>
              </a>
            </span>
          </div>

          <div style="clear: both;"></div>
          <div class="eea-preview-items"
               tal:define="
                 table_view nocall:context/@@faceted-table-view;
               "
               tal:condition="batch/sequence_length"
          >
            <span tal:replace="structure python:table_view.render_table(batch)"></span>
          </div>

          <div style="clear: both;"></div>

          <div id="viewlet-bottom-above-nav"
               tal:content="structure provider:collective.eeafaceted.z3ctable.bottomabovenav"
          ></div>

          <div metal:use-macro="context/batch_macros/macros/navigation"></div>

          <div id="viewlet-bottom-below-nav"
               tal:content="structure provider:collective.eeafaceted.z3ctable.bottombelownav"
          ></div>

        </div>

      </metal:block>
    </metal:content-core>
  </body>
</html>
